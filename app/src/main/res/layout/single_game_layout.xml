<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="#0d2a39">
    <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="80dp" android:baselineAligned="false" android:measureWithLargestChild="false"
            android:showDividers="beginning" android:clickable="true"
            >
        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Расстановка кораблей"
                    android:id="@+id/textView1" android:layout_column="2"
                    android:textIsSelectable="false" android:textColor="#90bde8"
                    android:typeface="normal"/>
        </TableRow>
        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
        </TableRow>
        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1x"
                    android:id="@+id/textView" android:layout_column="2"
                    style="@style/preview"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="[][][][]"
                    android:id="@+id/textView2" android:layout_column="3" style="@style/preview"/>
        </TableRow>
        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2x"
                    android:id="@+id/textView3" android:layout_column="2" style="@style/preview"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="[][][]"
                    android:id="@+id/textView6" android:layout_column="3" style="@style/preview"/>
        </TableRow>
        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3x"
                    android:id="@+id/textView4" android:layout_column="2" style="@style/preview"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="[][]"
                    android:id="@+id/textView7" android:layout_column="3" style="@style/preview"/>
        </TableRow>
        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4x"
                    android:id="@+id/textView5" android:layout_column="2" style="@style/preview"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="[]"
                    android:id="@+id/textView8" android:layout_column="3" style="@style/preview"/>
        </TableRow>
    </TableLayout>
    <ru.alexlen.jbs.GameView android:layout_width="match_parent"
                                       android:layout_height="400dp"
/>
</LinearLayout>