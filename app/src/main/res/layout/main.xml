<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:rowCount="5" android:columnCount="3"
            android:background="#3878b7" android:columnOrderPreserved="false"
            >
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_centerHorizontal="true"
                android:id="@+id/linearLayout" android:layout_marginTop="5dp">
            <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/imageView"
                    android:layout_alignParentTop="false"
                    android:src="@drawable/ic_launcher" android:layout_alignParentLeft="false"
                    android:layout_centerHorizontal="true" android:layout_alignLeft="@+id/btn_multiplayer"
                    />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Java battleship"
                    android:id="@+id/textView1" android:layout_toRightOf="@+id/imageView"
                    android:layout_alignParentTop="false"
                    android:layout_alignParentBottom="false" android:layout_alignBottom="@+id/imageView"
                    style="@style/h1"
                    android:layout_gravity="center" android:layout_marginLeft="5dp"/>
        </LinearLayout>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Против андроида"
                android:id="@+id/btn_singleplayer" android:layout_row="2" android:layout_column="2"
                android:minWidth="200dp" android:layout_alignParentLeft="false"
                android:layout_below="@+id/linearLayout" android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Против других игроков"
                android:id="@+id/btn_multiplayer" android:layout_row="3" android:layout_column="2"
                android:layout_alignParentLeft="false"
                android:layout_alignParentTop="false" android:layout_alignParentRight="false"
                android:layout_alignParentBottom="false"
                android:layout_alignWithParentIfMissing="false" android:layout_centerHorizontal="true"
                android:clickable="true" android:minWidth="200dp"
                android:layout_below="@+id/btn_singleplayer" android:layout_marginTop="5dp"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Настройки"
                android:id="@+id/btn_settings"
                android:layout_alignParentLeft="false"
                android:layout_below="@+id/btn_multiplayer"
                android:minWidth="200dp" android:layout_alignParentTop="false" android:layout_alignParentRight="false"
                android:layout_centerHorizontal="true" android:layout_marginTop="5dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="almazko"
                android:id="@+id/textView" android:layout_row="5" android:layout_column="2"
                android:layout_alignParentLeft="false"
                android:layout_alignParentTop="false" android:layout_alignParentRight="false"
                android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp" android:textColor="#ece1ff"/>
    </RelativeLayout>
</LinearLayout>